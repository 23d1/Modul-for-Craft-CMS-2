{
    "groups": [
        "Interface",
        "Thumbnails"
    ],
    "fields": [
        {
            "group": "Interface",
            "name": "Slide Objects Into View",
            "handle": "slideObjectsIntoView",
            "instructions": "Slide images, texts, videos and everything else into view as you scroll up and down. A very nice and subtle effect.",
            "required": false,
            "type": "Lightswitch",
            "typesettings": {
                "default": ""
            }
        },
        {
            "group": "Thumbnails",
            "name": "Thumbnail Hover Overlay Color",
            "handle": "thumbHoverOverlayColor",
            "instructions": "Set the color and transparency of the overlay that appears when you hover over or tap thumbnails.",
            "required": false,
            "type": "Spectrum_ColorPicker",
            "typesettings": {
                "allowEmpty": 1,
                "showInput": 1,
                "showAlpha": 1,
                "showPalette": 1,
                "showPaletteOnly": "",
                "preferredFormat": "rgb"
            }
        },
        {
            "group": "Thumbnails",
            "name": "Thumbnail Text Position",
            "handle": "thumbTextPosition",
            "instructions": "Set the position of the text that goes together with thumbnails.",
            "required": false,
            "type": "Lj_DynamicFields_Dropdown",
            "typesettings": {
                "json": "{% include '_dynamicfields\/thumb_text_position' ignore missing %}"
            }
        },
        {
            "group": "Thumbnails",
            "name": "Thumbnail Text Size",
            "handle": "thumbTextSize",
            "instructions": "Set the thumbnail text size.",
            "required": false,
            "type": "Lj_DynamicFields_Dropdown",
            "typesettings": {
                "json": "{% include '_dynamicfields\/thumb_text_size' ignore missing %}"
            }
        }
    ],
    "globals": [
        {
            "name": "Interface",
            "handle": "interface",
            "fieldLayout": {
                "Content": [
                    "slideObjectsIntoView"
                ]
            }
        },
        {
            "name": "Thumbnails",
            "handle": "thumbnails",
            "fieldLayout": {
                "Content": [
                    "thumbHoverOverlayColor",
                    "thumbTextPosition",
                    "thumbTextSize"
                ]
            }
        }
    ]
}
